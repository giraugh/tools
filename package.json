{
  "name": "@giraugh/tools",
  "private": false,
  "version": "0.1.0",
  "type": "module",
  "license": "MIT",
  "author": "Ewan Breakey (https://ewanb.me)",
  "repository": "github:giraugh/tools",
  "description": "Generic typescript utilities built with simplicity in mind",
  "keywords": [
    "utility",
    "typescript",
    "arrays",
    "objects",
    "promises"
  ],
  "files": [
    "dist"
  ],
  "main": "./dist/main.js",
  "types": "./dist/main.d.ts",
  "exports": {
    ".": {
      "import": "./dist/main.js",
      "require": "./dist/main.umd.cjs"
    }
  },
  "scripts": {
    "build": "tsc && vite build",
    "test": "vitest",
    "docs": "typedoc --plugin typedoc-plugin-markdown --out docs lib/**/index.ts",
    "ci:release": "yarn build && yarn changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.1",
    "typedoc": "^0.24.4",
    "typedoc-plugin-markdown": "4.0.0-next.7",
    "typescript": "^4.6.4",
    "vite": "^4.2.1",
    "vite-plugin-dts": "^1.6.5",
    "vitest": "^0.30.0"
  }
}
